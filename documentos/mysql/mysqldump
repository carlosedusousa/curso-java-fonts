#Biblioteca
CREATE TABLE autores (
id INT AUTO_INCREMENT NOT NULL,
primeiro_nome VARCHAR(50),
ultimo_nome VARCHAR(50),
pais VARCHAR(50),
PRIMARY KEY (id)
);
