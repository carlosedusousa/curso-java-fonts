CREATE TABLE bibliotecas (
id INT AUTO_INCREMENT NOT NULL,
nome VARCHAR(200),
endereco VARCHAR(200),
PRIMARY KEY (id)
);
INSERT INTO bibliotecas () VALUES (1, "UFSC","Florianopolis sn");
