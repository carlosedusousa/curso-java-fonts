CREATE TABLE livros (
id INT AUTO_INCREMENT NOT NULL,
autor_id INT NOT NULL,
editora_id INT NOT NULL,
titulo VARCHAR(100),
descricao TEXT,
tipo ENUM('romance','poesia','drama'),
ano_publicacao VARCHAR(4),
isbn VARCHAR(20),
PRIMARY KEY (id),
FOREIGN KEY (autor_id) REFERENCES autores(id)
);
